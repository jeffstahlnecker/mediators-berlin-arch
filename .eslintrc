
{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "env": {
    "jest": true,
    "browser": true
  },
  "rules": {
    "valid-typeof": "off",
    "react/prop-types": 0,
    "import/no-named-as-default": 0,
    "react/jsx-props-no-spreading": "off",
    "no-shadow": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "no-nested-ternary": "off"
  }
}

